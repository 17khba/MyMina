{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "./typings",
      "node_modules/miniprogram-api-typings"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.js"]
}
